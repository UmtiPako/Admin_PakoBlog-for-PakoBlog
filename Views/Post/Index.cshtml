@model IEnumerable<Admin_PakoBlog.Models.Post>
@{
    ViewData["Title"] = "Posts";
}
<div>
    <p>POSTLAR</p>
</div>
   <a class="btn btn-light" asp-controller="Post" asp-action="Post">Post Oluştur</a>

<table class="table table-hover">
    <tbody>
        @foreach (var item in Model)
        {
                        <tr>
                            <th scope="row">@item.ID</th>
                            <td>@item.Title</td>
                            <td>
                                @if(item.isPublished){
                                    <a class="btn btn-success">Yayınlandı</a>
                                }
                                else
                                {
                                       <a class="btn btn-light" asp-route-id="@item.ID" asp-action="Publish">yayınla</a>
                                }
                            </td>
                                <td>   <a class="btn btn-danger" asp-route-id="@item.ID" asp-action="DeletePost">sil</a> </td>
                        </tr>
        }
    </tbody>
</table>


