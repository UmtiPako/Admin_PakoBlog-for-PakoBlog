@model IEnumerable<Admin_PakoBlog.Models.Author>
@{
    ViewData["Title"] = "Author";
}
<button type="button" onclick="$('#author').modal('show')" class="btn btn-primary">Yazar Ekle</button>
<table class="table table-hover">
    <thead>
        <th scope="col">ID</th>
        <th scope="col">Name</th>
        <th scope="col">Surname</th>
        <th scope="col">Email</th>
        <th scope="col">Password</th>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                    <tr>
                        <th scope="row">@item.ID</th>
                        <td>@item.Name</td>
                        <td>@item.Surname</td>
                        <td>@item.Email</td>
                        <td>@item.Password</td>
                        <td>
                            <a class="btn btn-danger" asp-route-id="@item.ID" asp-action="DeleteAuthor">sil</a>
                        </td>
                    </tr>
        }
    </tbody>
</table>

<div class="modal" id="author" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">YAZAR</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
       <form action="/Author/AddAuthor" method="POST">
        <div class="modal-body">
            <div class="form-group">
                <input type="hidden" name="ID" id="Id" class="form-control">
                <input type="text" name="Name" placeholder="İsim..." id="Name" class="form-control">
            </div>
            <br />
            <div class="form-group">
                <input type="text" name="Surname" placeholder="Soyisim..." id="Surname" class="form-control">
            </div>
            <br />
            <div class="form-group">
                <input type="text" name="Email" placeholder="Email..." id="Email" class="form-control">
            </div>
            <br />
            <div class="form-group">
                <input type="text" name="Password" placeholder="Şifre..." id="Password" class="form-control">
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary" data-dismiss="modal">Kapat</button>
            <button type="submit" id="saveBtn" class="btn btn-success">Ekle</button>
        </form>
        </div>
    </div>
  </div>
</div>

